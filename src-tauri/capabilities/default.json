{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "http:default",
    "updater:default",
    "process:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://www.pathofexile.com/api/trade2/*"
        },
        {
          "url": "https://poe2helper.com/api/*"
        },
        {
          "url": "https://poe2scout.com/api/*"
        },
        {
          "url": "https://github.com/BryanBest/PoE2-StashScanner/releases/latest/download/latest.json"
        }
      ]
    }
  ]
}